@model IEnumerable<myMVCApp.Models.Location>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>


<form asp-controller="LocationsController" asp-action="Index">
    <p>
        Name: <input type="text" name="SearchString">
        <input type="submit" value="Search" />
    </p>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoadName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoadNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoadName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoadNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
