@model IEnumerable<WebApplication2.Models.Location>

@{
    ViewData["Title"] = "Locations";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.RoadName)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.RoadNumber)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.PostNumber)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoadName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RoadNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City)
            </td>
        </tr>
}
    </tbody>
</table>
